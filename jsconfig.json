{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"types/*": ["common/types/*"]
		},
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"strictNullChecks": true,
		"outDir": "./dist"
	},

	"include": ["common/**/*", "server/**/*"]
}
