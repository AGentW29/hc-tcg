{
	"compilerOptions": {
		"paths": {
			"server/*": ["./server/*"],
			"common/*": ["./common/*"],
			"types/*": ["./common/types/*"],
			"cards/*": ["./common/cards/*"]
		},
		"allowJs": true,
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"checkJs": true,
		"noEmit": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"outDir": "./dist"
	},
	"include": ["./**/*"]
}
